{
  "name": "simple-shell",
  "description": "Simple Shell for TypeScript projects.",
  "version": "1.0.0",
  "main": "src/index.tsx",
  "repository": "https://github.com/moquette/react-typescript-starter.git",
  "keywords": [
    "webpack",
    "eslint",
    "prettier",
    "react-router-dom",
    "headless-ui"
  ],
  "license": "MIT",
  "scripts": {
    "start": "webpack-cli serve --mode=development --env development",
    "build": "yarn typecheck && webpack --mode=production --env production --progress",
    "format": "prettier './src/**/*.{js,jsx,ts,tsx,json,scss,css,md,html}' --write",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "lint:fix": "eslint './src/**/*.{ts,tsx}' --quiet --fix",
    "typecheck": "tsc --noEmit",
    "prep": "yarn format && yarn lint && yarn typecheck",
    "prepare": "husky install"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-hook-form": "^7.30.0",
    "react-icons": "^4.3.1",
    "react-transition-group": "^4.4.2"
  },
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.5",
    "@svgr/webpack": "^6.2.1",
    "@types/express-serve-static-core": "^4.17.28",
    "@types/node": "^17.0.31",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "@types/react-helmet": "^6.1.5",
    "@types/serve-static": "^1.13.10",
    "@types/tapable": "^2.2.2",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "autoprefixer": "^10.4.6",
    "css-loader": "^6.7.1",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "fork-ts-checker-webpack-plugin": "^7.2.11",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "postcss": "^8.4.13",
    "postcss-import": "^14.1.0",
    "postcss-loader": "^6.2.1",
    "postcss-nesting": "^10.1.4",
    "postcss-preset-env": "^7.4.4",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.10",
    "react-helmet": "^6.1.0",
    "react-refresh": "^0.13.0",
    "react-router-dom": "^6.3.0",
    "sass": "^1.51.0",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.0.24",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.7.0",
    "tsc-files": "^1.1.3",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "type-fest": "^2.12.2",
    "typescript": "^4.6.4",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1"
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "eslint",
      "prettier --write",
      "tsc-files --noEmit --pretty"
    ]
  },
  "packageManager": "yarn@3.2.0"
}
